@{
    ViewData["Title"] = "Add/Edit Bowler";
}

@model Mission13.Models.Bowler

<br />
<h2>Add/Edit Bowler</h2>
<br />

<div class="">

    <form method="post">

        <div class="form-group">
            <label asp-for="BowlerFirstName">Bowler First Name: </label>
            <input asp-for="BowlerFirstName" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="BowlerMiddleInit">Bowler Middle Initial</label>
            <input asp-for="BowlerMiddleInit" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="BowlerLastName">Bowler Last Name: </label>
            <input asp-for="BowlerLastName" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="BowlerAddress">Bowler Address: </label>
            <input asp-for="BowlerAddress" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="BowlerCity">Bowler City: </label>
            <input asp-for="BowlerCity" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="BowlerState">Bowler State: </label>
            <input asp-for="BowlerState" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="BowlerZip">Bowler Zipcode: </label>
            <input asp-for="BowlerZip" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="BowlerPhoneNumber">Bowler Phone: </label>
            <input asp-for="BowlerPhoneNumber" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="TeamID">Bowler Team: </label>
            <select asp-for="TeamID" type="text" class="form-control">
                <option value="">Choose a team</option>
                <option value="1">Marlins</option>
                <option value="2">Sharks</option>
                <option value="3">Terrapins</option>
                <option value="4">Barracudas</option>
                <option value="5">Dolphins</option>
                <option value="6">Orcas</option>
                <option value="7">Manatees</option>
                <option value="8">Swordfish</option>
                <option value="9">Huckleberrys</option>
                <option value="10">MintJuleps</option>
            </select>
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <br />
    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Go Back</a>

    <div asp-validation-summary="All" style="color:red;"></div>

</div>

